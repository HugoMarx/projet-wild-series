{% extends 'base.html.twig' %}

{% block title %}Actor
{% endblock %}

{% block body %}
	<h1>Actor</h1>

	<table class="table">
		<tbody>
			{% if actor.image is not empty %}
				<tr>
					<th>Photo</th>
					<td><img src="{{ vich_uploader_asset(actor) }}" alt="" width='200px'></td>
				</tr>
			{% endif %}
			<tr>
				<th>Id</th>
				<td>{{ actor.id }}</td>
			</tr>
			<tr>
				<th>Firstname</th>
				<td>{{ actor.firstname }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ actor.lastname }}</td>
			</tr>
			<tr>
				<th>Birth_date</th>
				<td>{{ actor.birthDate }}</td>
			</tr>
			<tr>
				<th>Participation</th>
				<td>
					<ul>
						{% for program in actor.programs %}
							<a href="{{path('program_show', {slug: program.slug})}}">
								<li>{{program.title}}</li>
							</a>
						{% endfor %}
					</ul>
				</td>


			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_actor_index') }}">back to list</a>

	<a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

	{{ include('actor/_delete_form.html.twig') }}
{% endblock %}
